<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. 状态栏颜色-->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--default-->
    <style name="AppTheme" parent="BaseAppTheme.NoActionBar">
        <item name="skin_color_main">@color/light_blue</item>
        <item name="skin_color_sub">@color/light_blue</item>
        <item name="skin_color_background">@color/grey100</item>
        <item name="skin_color_windows">@color/grey150</item>
        <item name="skin_color_text">@color/black</item>
        <item name="skin_color_btn">@color/orange</item>
        <item name="skin_color_mask">@color/light_white</item>
        <item name="skin_color_divider">@color/grey400</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" >
        <!--新增一个item，用于控制menu-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!--将顶部状态栏设置为透明，并将界面内容布局上边界上提至状态栏顶部-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--如果有底部虚拟导航栏，则将底部虚拟导航栏设置为透明，并将界面内容布局下边界下沉至虚拟导航栏底部-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- 给window窗口设置背景图,启动白屏是因为application oncreate 浪费太多时间-->
        <item name="android:windowBackground">@drawable/common_app_background</item>
        <!-- 背景图全屏显示-->
        <item name="android:windowFullscreen">true</item>
        <!-- 设置状态栏为白色的，状态栏文字为黑的 -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- 设置导航栏透明-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>