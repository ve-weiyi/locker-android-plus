<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. 状态栏颜色-->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <!--    colorError：用于错误的颜色（通常为红色阴影）-->
        <item name="colorError">@color/colorError</item>
    </style>

    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <attr name="skin_main_bg" format="reference" />
    <!--format指定为reference的时候，需要输入索引，比如@color/white，但是format指定为color时，可以直接设置16进制的int作为颜色-->
    <attr name="sc_brand" format="color|reference" />
    <attr name="sc_secondary" format="color|reference" />
    <!--    背景色-->
    <attr name="sc_background" format="color|reference" />
    <!--    显示在背景色上-->
    <attr name="sc_windows" format="color|reference" />
    <!--    文字颜色-->
    <attr name="sc_text" format="color|reference" />
    <attr name="sc_text_light" format="color|reference" />
    <attr name="sc_sub_text" format="color|reference" />
    <attr name="sc_sub_text_light" format="color|reference" />

    <attr name="sc_btn" format="color|reference" />
    <attr name="sc_mask" format="color|reference" />
    <attr name="sc_divider" format="color|reference" />

    <!--default-->
    <style name="AppTheme" parent="BaseAppTheme.NoActionBar">
        <item name="sc_brand">@color/colorPrimary</item>
        <item name="sc_secondary">@color/colorSecondary</item>
        <item name="sc_background">@color/colorBackground</item>
        <item name="sc_windows">@color/windowBackground</item>
        <item name="sc_text">@color/textColorPrimary</item>
        <item name="sc_sub_text">@color/color_gray</item>
        <item name="sc_btn">@color/orange</item>
        <item name="sc_mask">@color/mask_color</item>
        <item name="sc_divider">@color/line_divider</item>
    </style>

    <style name="AppTheme.Night">
        <item name="sc_brand">#35464e</item>
        <item name="sc_secondary">@color/cyan_light</item>
        <item name="sc_background">@color/grey800</item>
        <item name="sc_windows">@color/grey900</item>
        <item name="sc_text">@color/grey200</item>
        <item name="sc_btn">@color/pink</item>
        <item name="sc_mask">@color/black</item>
        <item name="sc_divider">@color/grey600</item>
    </style>

    <style name="AppTheme.Sakura">
        <item name="sc_brand">@color/pink</item>
        <item name="sc_secondary">@color/cyan_light</item>
        <item name="sc_background">@color/grey800</item>
        <item name="sc_windows">@color/grey900</item>
        <item name="sc_text">@color/grey200</item>
        <item name="sc_btn">@color/pink</item>
        <item name="sc_mask">@color/black</item>
        <item name="sc_divider">@color/grey600</item>
    </style>


    <style name="SplashTheme" parent="AppTheme">
        <!--将顶部状态栏设置为透明，并将界面内容布局上边界上提至状态栏顶部-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--如果有底部虚拟导航栏，则将底部虚拟导航栏设置为透明，并将界面内容布局下边界下沉至虚拟导航栏底部-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- 给window窗口设置背景图,启动白屏是因为application oncreate 浪费太多时间-->
        <item name="android:windowBackground">@drawable/common_app_background</item>
        <!-- 设置状态栏为白色的，则状态栏文字为黑的 -->
<!--        <item name="android:windowLightStatusBar">true</item>-->
        <!-- 设置导航栏透明-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
</resources>