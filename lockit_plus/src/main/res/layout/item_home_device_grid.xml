<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dp_12"
    android:paddingHorizontal="@dimen/dp_8"
    android:layout_marginHorizontal="@dimen/dp_8"
    android:layout_marginVertical="@dimen/dp_8"
    android:background="@drawable/bg_rect_on_background">

    <ImageView
        android:id="@+id/iv_device_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/img_robovac_select" />

    <LinearLayout
        android:id="@+id/layout_device_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_device_icon"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_device_name"
            style="@style/t16_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_4"
            android:text="Robovac 20hy â€” UEC"
            android:textColor="?sc_text_dark" />

        <TextView
            android:id="@+id/tv_device_online"
            style="@style/t14_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:drawablePadding="4dp"
            android:text="Online"
            android:textColor="?sc_text_grey"
            app:drawableStartCompat="@drawable/img_green_dot" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iconl_eufyclean_home_schedule" />

    <ImageView
        android:id="@+id/iv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_iconl_eufyclean_home_update" />

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_device_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@drawable/ic_iconl_eufyclean_home_start_online" />
</RelativeLayout>
