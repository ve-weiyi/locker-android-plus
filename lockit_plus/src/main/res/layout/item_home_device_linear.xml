<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_8"
    android:layout_marginVertical="@dimen/dp_8"
    android:background="@drawable/bg_rect_on_background">

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf= "parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_device_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/dp_8"
        android:layout_marginVertical="@dimen/dp_16"
        android:src="@drawable/img_robovac_select" />

    <ImageView

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_update"
        android:id="@+id/iv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/iv_update"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_iconl_eufyclean_home_schedule" />

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/iv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_8"
        android:src="@drawable/ic_iconl_eufyclean_home_update" />


    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_device_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/layout_device"
        android:paddingVertical="@dimen/dp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_toEndOf="@id/iv_device_icon"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_device_name"
                style="@style/t16_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_40"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Robovac 20hy â€” UEC 1231124"
                />

            <TextView
                android:layout_marginStart="@dimen/dp_12"
                android:id="@+id/tv_device_state"
                style="@style/t14_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_device_name"
                android:layout_marginTop="@dimen/dp_8"
                android:drawablePadding="4dp"
                android:text="Online"
                android:textColor="?sc_text_grey"
                app:drawableStartCompat="@drawable/img_green_dot" />


            <ImageView
                android:id="@+id/iv_switch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_iconl_eufyclean_home_switch_on"
                />


        </RelativeLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
