<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_12">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/brand"
        app:shapeAppearanceOverlay="@style/CircleImageStyle"
        />


    <TextView
        style="@style/t34_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_avatar"
        android:layout_alignEnd="@id/iv_avatar"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_alignBottom="@id/iv_avatar"
        android:gravity="center"
        android:background="@drawable/bg_circle_brand"
        android:text="A"
        android:textColor="@color/white" />


    <!-- Anna -->
    <TextView
        android:layout_toEndOf="@id/iv_avatar"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anna"
        style="@style/t24_b"
        />

    <TextView
        android:layout_below="@id/tv_username"
        android:layout_alignStart="@id/tv_username"
        android:layout_marginTop="@dimen/dp_4"
        android:id="@+id/ann"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bella.yu@anker-in.com"
        style="@style/t14_r"
        android:textColor="@color/t2_dark"
        />

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_alignBottom="@id/iv_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_icon_outline_right2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_avatar"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/bg_rect_on_background"
        android:paddingVertical="@dimen/dp_20"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.8">

        <LinearLayout
            android:id="@+id/tab_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_circle_grey"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_messages" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Message"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_collect_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_circle_grey"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_help_feedback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Help &amp; Feedback"

                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_wallet_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_circle_grey"
                android:padding="@dimen/dp_12"
                android:src="@drawable/ic_device_sharing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Device Sharing"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>