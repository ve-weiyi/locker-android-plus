<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ib_login_way" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:padding">4dp</item>
    </style>



    <style name="CommonCardViewLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">4dp</item>

        <item name="android:background">?colorBackground</item>
        <item name="android:elevation">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>



    <style name="CommonEufyDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <dimen name="common_btn_radius">40dp</dimen>
    <dimen name="common_btn_height">54dp</dimen>
    <dimen name="common_btn_middle_height">35dp</dimen>
    <dimen name="common_btn_middle_text_size">15dp</dimen>
    <dimen name="common_btn_margin_start_end">0dp</dimen>
    <dimen name="common_btn_margin_top_bottom">7dp</dimen>

    <style name="CommonBtnStyle" parent="t18_l">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_btn_height</item>
        <item name="android:layout_marginStart">@dimen/common_btn_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/common_btn_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/common_btn_margin_top_bottom</item>
        <item name="android:layout_marginBottom">@dimen/common_btn_margin_top_bottom</item>
        <item name="android:textColor">@color/c2_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CommonBtnStyle.GreenMiddleBtn" parent="CommonBtnStyle">
        <item name="android:background">@drawable/common_btn_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_btn_middle_height</item>
        <item name="android:textSize">@dimen/common_btn_middle_text_size</item>
    </style>

</resources>