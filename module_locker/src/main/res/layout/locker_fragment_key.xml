<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_readme"
            android:text="请仔细阅读"
            style="@style/tv_title_big" />

    <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="locker需要一个秘钥加密您的数据 "
            style="@style/tv_content_primary" />

    <TextView
            android:id="@+id/tv_key_tip"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locker_key_tip"
            style="@style/tv_content_primary" />

    <TextView
            android:id="@+id/tv_key_primary"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="****** 注意 ******"
            style="@style/tv_content_primary" />

    <TextView
            android:id="@+id/tv_key_tip_1"
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locker_key_tip_1"
            style="@style/tv_content_primary" />
    <TextView
            android:paddingHorizontal="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:text="请点击下面的按钮生成秘钥"
            style="@style/tv_content_primary" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

        <com.google.android.material.button.MaterialButton
                style="@style/MenuButtonsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生成秘钥"/>

        <com.google.android.material.button.MaterialButton
                style="@style/MenuButtonsStyle"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认使用"/>

    </LinearLayout>

    <EditText
            android:id="@+id/et_key"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123567868"
            style="@style/EditText"
            />

</LinearLayout>