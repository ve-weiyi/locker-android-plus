<?xml version="1.0" encoding="utf-8"?>


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="60dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/windowColorBackground"
                    android:orientation="vertical">

                <LinearLayout
                        android:paddingHorizontal="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:layout_marginHorizontal="20dp"
                        android:background="@drawable/bg_round_white_8dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_round_white_8dp"
                                android:orientation="horizontal">

                            <TextView
                                    android:id="@+id/tv_privacy_folder"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:backgroundTint="@color/blue"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:background="@drawable/ic_baseline_folder_24"
                                    android:text="默认" />

                        </LinearLayout>

                        <LinearLayout
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/tv_privacy_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:text="我的QQ账号" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="描述：" />

                        <TextView
                                android:id="@+id/tv_privacy_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="床前明月光" />

                    </LinearLayout>

                    <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        <ImageView
                                android:src="@drawable/ic_apps_black_24dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        <TextView
                                android:id="@+id/tv_privacy_tag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="标签" />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginTop="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_below="@id/tv_privacy_desc"
                            android:layout_centerHorizontal="true"
                            >

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:textSize="12sp"
                                android:text="创建时间:" />

                        <TextView
                                android:id="@+id/tv_privacy_create_time"
                                android:layout_marginStart="5dp"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:text="2022-4-12" />


                    </LinearLayout>

                    <LinearLayout
                            android:layout_marginVertical= "2dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_below="@id/tv_privacy_desc"
                            android:layout_centerHorizontal="true"
                            >


                        <TextView
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="更新时间:" />

                        <TextView
                                android:layout_marginStart="5dp"
                                android:textSize="12sp"
                                android:id="@+id/tv_privacy_update_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:text="2022-4-12" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:layout_marginHorizontal="20dp"
                        android:padding="10dp"
                        android:background="@drawable/bg_round_white_8dp"
                        android:orientation="vertical">


                    <LinearLayout
                            android:background="@drawable/bg_round_white_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="@dimen/dp_10"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/tv_item_owner"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"

                                    android:textColor="@color/blue"
                                    android:text="持有人" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_item_owner"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/InputTextLayoutStyle">

                                    <EditText
                                            android:id="@+id/et_detail_owner"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            style="@style/EditText.See"
                                            tools:hint="weiyi" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                        android:layout_marginHorizontal="10dp"
                                        android:id="@+id/tv_copy_owner"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/blue"
                                        android:text="复制" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"

                                    android:textColor="@color/blue"
                                    android:text="卡号" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/InputTextLayoutStyle.See">

                                    <EditText
                                            android:id="@+id/et_detail_account"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            style="@style/EditText.See"
                                            tools:hint="U201814550" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                        android:layout_marginHorizontal="10dp"
                                        android:id="@+id/tv_copy_account"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/blue"
                                        android:text="复制" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"

                                    android:textColor="@color/blue"
                                    android:text="密码" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        style="@style/InputTextLayoutStyle.See">

                                    <EditText
                                            android:id="@+id/et_detail_password"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            style="@style/EditText.See"
                                            tools:hint="U201814550" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                        android:layout_marginHorizontal="10dp"
                                        android:id="@+id/tv_copy_password"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/blue"
                                        android:text="复制" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"

                                    android:textColor="@color/blue"
                                    android:text="绑定手机号" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/InputTextLayoutStyle">

                                    <EditText
                                            android:id="@+id/et_detail_phone"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            style="@style/EditText.See"
                                            tools:hint="15623356029" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <TextView
                                        android:layout_marginHorizontal="10dp"
                                        android:id="@+id/tv_copy_phone"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:textSize="16sp"
                                        android:textColor="@color/blue"
                                        android:text="复制" />
                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"

                                    android:textColor="@color/blue"
                                    android:text="地址" />

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end"
                                    android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputLayout
                                        android:layout_weight="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/InputTextLayoutStyle">

                                    <EditText
                                            android:id="@+id/et_detail_address"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            style="@style/EditText.See"
                                            tools:hint="湖北省 武汉市 华中科技大学" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                                android:paddingBottom="60dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingTop="@dimen/dp_10">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/dp_16"
                                    android:layout_marginVertical="10dp"
                                    android:textColor="@color/blue"
                                    android:text="备注" />

                            <EditText

                                    style="@style/EditText.See"
                                    android:paddingHorizontal="@dimen/dp_10"
                                    android:id="@+id/et_detail_remark"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/dp_10"
                                    android:paddingBottom="60dp"
                                    android:background="@drawable/shape_round_grey"
                                    tools:hint="@string/text_content" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="60dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom|center_horizontal">

            <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_marginHorizontal="10dp"
                    android:padding="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:background="@drawable/shape_oval_blue" />

            <ImageView
                    android:id="@+id/btn_copy"
                    android:layout_marginHorizontal="10dp"
                    android:padding="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_baseline_content_copy_24"
                    android:background="@drawable/shape_oval_green" />

            <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_marginHorizontal="10dp"
                    android:padding="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:background="@drawable/bg_circle_red" />
        </LinearLayout>
    </FrameLayout>
